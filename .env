
PORT=8000
ENV_NAME=staging
ALLOWED_ORIGINS=*
LOG_LEVEL=info

# ---- Auth: SIMPLE API KEY (lowercase!) ----
AUTH_MODE=api_key
API_KEY=changeme-local


# ---- Vector DB ----
VECTOR_DB_DIR=/var/lib/chroma
COLLECTION_NAME=knowledge_base
CHROMA_EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
KB_MIN_DOCS=0
RAG_TOP_K=5
RAG_MIN_SCORE=0.30

# ---- Detector thresholds ----
DETECT_ERR_HIGH=1.0
DETECT_ERR_MED=0.5
DETECT_P95_HIGH=1000
DETECT_P95_MED=800
DETECT_MIN_WINDOW_S=30

# ---- Policy ----
ENV_ALLOWLIST=dev,staging,prod
PROD_ENVS=prod,production
PEAK_START=09:00:00
PEAK_END=21:00:00
REQUIRE_APPROVAL_FOR_WRITES=1
BLOCK_GLOBAL_FF_IN_PROD=1
REQUIRE_BACKUP_FOR_SCHEMA=1
MAX_TARGETS_PROD=5
SENSITIVE_SERVICES=auth,payments

# ---- Integrations (leave blank) ----
SLACK_WEBHOOK_URL=
JIRA_BASE_URL=
JIRA_API_TOKEN=
JIRA_PROJECT_KEY=
STATE_DIR=state

# ---- Telemetry off ----
POSTHOG_DISABLED=true
ANONYMIZED_TELEMETRY=false
CHROMADB_TELEMETRY_ENABLED=false
OTEL_SDK_DISABLED=true
CHROMA_TENANT=default_tenant
CHROMA_DATABASE=default_database
